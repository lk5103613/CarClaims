<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ABD732" >

        <LinearLayout
            android:layout_width="40dip"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="back"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="8dip"
                android:layout_height="15dip"
                android:scaleType="fitXY"
                android:src="@drawable/back" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="选择地址"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/province_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_2_shape"
            android:clickable="true"
            android:onClick="openPop"
            android:weightSum="20"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/province"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:hint="选择省份"
                android:padding="15dp"
                android:text=""
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/drop_target1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/activity_2_1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/city_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_2_shape"
            android:clickable="true"
            android:weightSum="20"
            android:onClick="openPop"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:hint="选择城市"
                android:padding="15dp"
                android:text=""
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/drop_target2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/activity_2_1" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/area_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_2_shape"
            android:clickable="true"
            android:weightSum="20"
            android:onClick="openPop"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="19"
                android:hint="选择区,街道或地址"
                android:padding="15dp"
                android:text=""
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/drop_target3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/activity_2_1" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/activity_2_shape"
            android:clickable="true"
            android:weightSum="20"
            android:orientation="horizontal" >
        
	        <EditText android:id="@+id/txt_detail_address"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:textSize="18dp"
	            android:hint="请输入详细地址"
	            android:padding="15dp"/>
        </LinearLayout>
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/acitivity_1_shape_1"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:onClick="selectArea"
            android:padding="10dp"
            android:text="确定"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        
    </LinearLayout>

</LinearLayout>